@using KidFit.ViewModels
@model LoginRequestViewModel
@{
    ViewData["Title"] = "KidFit - Login";
    Layout = null;
}
<!DOCTYPE html>

<html class="light" lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/static/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="~/static/favicon.svg" />
    <link rel="shortcut icon" href="~/static/favicon.ico" />

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&amp;display=swap"
        rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
        rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#135bec",
                        "background-light": "#f6f6f8",
                        "background-dark": "#101622",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Lexend', sans-serif;
        }
    </style>
</head>

<body
    class="bg-background-light dark:bg-background-dark min-h-screen flex items-center justify-center p-4 font-display">
    <div class="w-full max-w-md">
        <!-- Main Card Container -->
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-xl overflow-hidden border border-primary/10">
            <!-- Illustration Header Section -->
            <div
                class="bg-primary/5 dark:bg-primary/10 p-8 flex flex-col items-center justify-center border-b border-primary/5">
                <div class="w-48 h-48 mb-4 relative">
                    <img alt="Digital Learning Illustration" class="w-full h-full object-cover rounded-xl"
                        data-alt="Digital learning illustration with books and screens"
                        src="~/static/logo.png"
                    />
                        @* src="https://lh3.googleusercontent.com/aida-public/AB6AXuCV5Wr6ST9ulXJxyRJCNdYKo7CplEazzqqy8GRN9OYuAC34L5ryyYr8K0NyNyJ6H2exE0KAZD6a2CGpdppwZVAo-PD684dhws13WDOWrKMP-C7oZRSGKXAbs8Z1cTLEGC69QvSCdX6RnDvHkwm5FuKrxzXuToetpz4BAJkrppExqDgvaOi5syTJRorWvE56CD5Q3crEOJZwot8pDE0y1VyEnJ1Ub3BXVJwlanETuaI4mbsvO6uEfZ8-eqMytuvk5QNr58u_TOEA5JZO" /> *@
                    <div class="absolute -bottom-2 -right-2 bg-primary text-white p-2 rounded-lg shadow-lg">
                        <span class="material-icons text-xl">school</span>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-slate-800 dark:text-white mt-4">Welcome Back</h1>
                <p class="text-slate-500 dark:text-slate-400 text-sm mt-1 text-center">Access your digital learning
                    materials</p>
            </div>

            <!-- Error Message -->
            @if (ViewData["Message"] != null)
            {
                <div class="p-8 pb-0">
                    <div
                        class="bg-[#fee2e2] border border-[#fecaca] text-[#dc2626] p-3 rounded-lg text-sm flex items-center gap-2">
                        <span uk-icon="icon: warning"></span>
                        @ViewData["Message"]
                    </div>
                </div>
            }

            <!-- Login Form Section -->
            <div class="p-8">
                <form asp-action="Login" asp-controller="Auth" method="post" class="space-y-6">
                    <!-- Username Field -->
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-slate-700 dark:text-slate-300 flex items-center gap-2"
                            for="Username">
                            <span class="material-icons text-primary text-lg">account_box</span>
                            Username
                        </label>
                        <input
                            class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 outline-none"
                            id="Username" name="Username" placeholder="Enter your username or email" required="" type="text" 
                            asp-for="Username" />
                    </div>

                    <!-- Password Field -->
                    <div class="space-y-2">
                        <div class="flex justify-between items-center">
                            <label
                                class="text-sm font-medium text-slate-700 dark:text-slate-300 flex items-center gap-2"
                                for="Password">
                                <span class="material-icons text-primary text-lg">lock_open</span>
                                Password
                            </label>
                            @* <a class="text-xs font-semibold text-primary hover:underline transition-all" href="#">Forgot
                                Password?</a> *@
                        </div>
                        <div class="relative">
                            <input
                                class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 outline-none"
                                id="Password" name="Password" placeholder="Enter your password" required="" type="password" 
                                asp-for="Password" />
                            <button
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-primary transition-colors"
                                type="button" onclick="togglePassword('Password', this)">
                                <span class="material-icons text-lg">visibility_off</span>
                            </button>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button
                        class="w-full bg-primary hover:bg-primary/90 text-white font-semibold py-3.5 rounded-lg shadow-md hover:shadow-lg transition-all transform active:scale-[0.98] flex items-center justify-center gap-2"
                        type="submit">
                        Sign In
                        <span class="material-icons text-lg">arrow_forward</span>
                    </button>
                </form>

                @* <!-- Divider -->
                <div class="relative my-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-200 dark:border-slate-800"></div>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                        <span class="bg-white dark:bg-slate-900 px-3 text-slate-400 font-medium tracking-wider">Or
                            continue with</span>
                    </div>
                </div>

                <!-- SSO Buttons -->
                <div class="grid grid-cols-2 gap-4">
                    <button
                        class="flex items-center justify-center gap-2 px-4 py-2.5 border border-slate-200 dark:border-slate-700 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <img alt="Google Logo" class="w-5 h-5" data-alt="Google logo icon"
                            src="https://lh3.googleusercontent.com/aida-public/AB6AXuDY6wSI-bGylHFcLjKInKLTTDh0-0qFalTMOl7uq6lrAfQTRBIEqKGmdxn0-D4N1zfK-H4nZMYIEwATNW9rG4mHO5XugMEeQ7V5KwjykAUhdDeIIS7o0kupVBbtz9_OefIB2TU0k0sRoMBCsxJdmNyIaKuTwiqoCt-k5FKGkufymTRL7tKbWh5oVawpgfsyrE5cCS-ZD2ZPZFAUVu8V-pjvgozvJIrSiK2aAwZEg4vz5leIOoLM2GlzUrEbjBwBm4fJa0kQBu8IPekn" />
                        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Google</span>
                    </button>
                    <button
                        class="flex items-center justify-center gap-2 px-4 py-2.5 border border-slate-200 dark:border-slate-700 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <img alt="Microsoft Logo" class="w-5 h-5" data-alt="Microsoft logo icon"
                            src="https://lh3.googleusercontent.com/aida-public/AB6AXuDueNQfjQw6cZ-J3kDOdkt5_U_8D7pUjSkM3fCfKTklf095fjD7UN9zQ80oSfPX7lv8PPcBXkTnQDehWImJ_Lxp-a4r6_xp18HmtOa7E2tg47YMK0uIH52omlBZBvExuYwxGoIGq4cS6-e-S989n8ndB_pLNXDvNazXMOHXE5znEIXf06DHfdqXGIUjiAyISfSidkZX6lpmSLXkEPqnsWSVDB-Sbg4fDivujRiP9fGQh4WXfQYLnJ4UvBwwPCWyGbKzjmx4vQJVxwCe" />
                        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Microsoft</span>
                    </button>
                </div> *@
            </div>

            <!-- Card Footer -->
            <div
                class="p-6 bg-slate-50 dark:bg-slate-800/50 border-t border-slate-100 dark:border-slate-800 text-center">
                <p class="text-sm text-slate-600 dark:text-slate-400">
                    STEM Learning Platform for Preschoolers
                </p>
            </div>
        </div>

        <!-- Footer Links -->
        <div class="mt-8 flex flex-wrap justify-center gap-6 text-xs text-slate-400 font-medium">
            <a class="hover:text-primary transition-colors uppercase tracking-widest" href="#">Privacy Policy</a>
            <a class="hover:text-primary transition-colors uppercase tracking-widest" href="#">Terms of Service</a>
            <a class="hover:text-primary transition-colors uppercase tracking-widest" href="#">Help Center</a>
        </div>
    </div>

        <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('.material-icons');
            if (input.type === 'password') {
                input.type = 'text';
                icon.textContent = 'visibility';
            } else {
                input.type = 'password';
                icon.textContent = 'visibility_off';
            }
        }
    </script>
</body>

</html>
