@using KidFit.Shared.Constants
@using System.Text.Json
@model KidFit.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Update Account";
}

<header class="h-16 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between px-8 sticky top-0 z-10">
    <div class="flex items-center gap-4">
        <a asp-action="Index" asp-controller="Account" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 transition-colors">
            <span class="material-symbols-outlined text-2xl">arrow_back</span>
        </a>
        <h2 class="text-xl font-bold text-slate-900 dark:text-white">Update Account</h2>
    </div>
</header>

<div class="p-8 max-w-2xl">
    @if (TempData[MessageLevel.SUCCESS.ToString()] != null)
    {
        <div class="mb-6 p-4 bg-emerald-50 dark:bg-emerald-900/30 border border-emerald-200 dark:border-emerald-800 rounded-lg text-emerald-700 dark:text-emerald-300 font-medium">
            @TempData[MessageLevel.SUCCESS.ToString()] 
        </div>
    }
    @if (TempData[MessageLevel.ERROR.ToString()] != null)
    {
        <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg text-red-700 dark:text-red-300 font-medium">
            @TempData[MessageLevel.ERROR.ToString()]
        </div>
    }
    @if (TempData[MessageLevel.WARNING.ToString()] != null)
    {
        <div class="mb-6 p-4 bg-yellow-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-lg text-blue-700 dark:text-blue-300 font-medium">
            @TempData[MessageLevel.WARNING.ToString()]
            @* If this is ModelState error, print it out *@
            @if (TempData[MessageLevel.LOG.ToString()] is String[] logs && logs is not null && logs.Count() != 0) {
                <ul>
                    @foreach (var log in logs)
                    {
                        <li>@log</li>
                    }
                </ul>
            }
        </div>
    }

    <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden shadow-sm">
        <div class="p-8 border-b border-slate-200 dark:border-slate-800">
            <div class="flex items-center gap-4">
                <div class="h-16 w-16 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center overflow-hidden border-2 border-slate-200 dark:border-slate-700">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <img alt="Avatar" class="h-full w-full object-cover" src="@Model.AvatarUrl" />
                    }
                    else
                    {
                        <span class="text-slate-500 dark:text-slate-400 text-xl font-bold">@Model.UserName.Substring(0, 1).ToUpper()</span>
                    }
                </div>
                <div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white">@Model.UserName</h3>
                    <p class="text-sm text-slate-500 dark:text-slate-400">@Model.Email</p>
                </div>
            </div>
        </div>

        <form asp-action="Update" asp-controller="Account" asp-route-id="@Model.Id" method="post">
            <div class="p-8 space-y-6">
                <div>
                    <label for="UserName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">UserName</label>
                    <input required id="UserName" name="UserName" type="text" value="@Model.UserName" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="Enter UserName" />
                    <span asp-validation-for="UserName" class="mt-1 text-sm text-rose-500"></span>
                </div>

                <div>
                    <label for="Email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Email Address</label>
                    <input required id="Email" name="Email" type="email" value="@Model.Email" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="Enter email address" />
                </div>

                <div>
                    <label for="AvatarUrl" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Avatar URL</label>
                    <input id="AvatarUrl" name="AvatarUrl" type="url" value="@Model.AvatarUrl" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="https://example.com/avatar.jpg" />
                    <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">Enter a URL for the user's avatar image. Leave empty for default avatar.</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Status</label>
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full @(Model.IsActive ? "bg-emerald-500" : "bg-rose-500")"></div>
                        <span class="text-sm font-medium @(Model.IsActive ? "text-emerald-600 dark:text-emerald-400" : "text-rose-600 dark:text-rose-400")">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </div>
                    <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">Status can be changed from the account list or details page.</p>
                </div>
            </div>

            <div class="px-8 py-6 bg-slate-50 dark:bg-slate-800/30 border-t border-slate-200 dark:border-slate-700 flex items-center justify-end gap-4">
                <a asp-action="Index" asp-controller="Account" asp-route-id="@Model.Id" class="px-5 py-2.5 rounded-lg text-sm font-semibold text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg flex items-center gap-2 text-sm font-bold shadow-sm transition-all">
                    <span class="material-symbols-outlined text-lg">save</span>
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
